{
	"name": "@chance/hooks",
	"version": "0.3.0",
	"description": "Handy React hooks I use a lot ↪️",
	"scripts": {
		"build": "tsup",
		"test": "vitest --reporter verbose",
		"coverage": "vitest run --coverage",
		"doc": "typedoc --plugin typedoc-plugin-markdown --out ./docs/ --exclude \"**/test/**/*\" --entryPointStrategy expand ./src"
	},
	"author": "Chance Strickland <hi@chance.dev>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chaance/hooks.git"
	},
	"license": "MIT",
	"files": [
		"dist",
		"src",
		"README.md",
		"LICENSE"
	],
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/json2mq": "0.2.0",
		"@types/node": "^18.11.18",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.10",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"@vitejs/plugin-react": "^3.0.1",
		"@vitest/coverage-c8": "^0.27.1",
		"@vitest/ui": "^0.27.1",
		"eslint": "^8.31.0",
		"eslint-config-chance": "^2.0.2",
		"eslint-import-resolver-node": "0.3.7",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.4",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"happy-dom": "^8.1.4",
		"prettier": "^2.8.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tsup": "^6.5.0",
		"typedoc": "0.23.24",
		"typedoc-plugin-markdown": "^3.14.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vitest": "^0.27.1"
	},
	"dependencies": {
		"json2mq": "0.2.0"
	},
	"peerDependencies": {
		"react": ">=18.0",
		"react-dom": ">=18.0"
	},
	"engines": {
		"node": ">=16"
	},
	"publishConfig": {
		"access": "public",
		"types": "./dist/index.d.ts",
		"module": "./dist/index.mjs",
		"main": "./dist/index.js",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.mjs",
				"require": "./dist/index.js"
			},
			"./*": {
				"types": "./dist/*.d.ts",
				"import": "./dist/*.mjs",
				"require": "./dist/*.js"
			}
		}
	}
}
