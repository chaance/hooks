{
	"name": "@chance/hooks",
	"version": "0.5.2",
	"description": "Handy React hooks I use a lot ↪️",
	"scripts": {
		"build": "tsup",
		"test": "vitest --reporter verbose",
		"test:coverage": "vitest run --coverage",
		"doc": "typedoc --plugin typedoc-plugin-markdown --out ./docs/ --exclude \"**/lib/**/*\" --exclude \"**/test/**/*\" --entryPointStrategy expand ./src",
		"clean": "rm -rf node_modules && rm -rf dist"
	},
	"author": "Chance Strickland <hi@chance.dev>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chaance/hooks.git"
	},
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"dist",
		"src"
	],
	"devDependencies": {
		"@chance/eslint": "1.0.0-beta.2",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/react": "^16.0.1",
		"@types/node": "^22.6.1",
		"@types/react": "^18.3.9",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"eslint": "^9.11.1",
		"happy-dom": "^15.7.4",
		"prettier": "^3.3.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.3.0",
		"typedoc": "0.26.7",
		"typedoc-plugin-markdown": "^4.2.8",
		"typescript": "^5.6.2",
		"vite": "^5.4.7",
		"vitest": "^2.1.1"
	},
	"dependencies": {
		"@chance/utils": "^0.1.1"
	},
	"peerDependencies": {
		"react": ">=18.0",
		"react-dom": ">=18.0"
	},
	"publishConfig": {
		"access": "public",
		"types": "./dist/index.d.ts",
		"module": "./dist/index.js",
		"main": "./dist/index.cjs",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
