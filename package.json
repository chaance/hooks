{
	"name": "@chance/hooks",
	"version": "0.5.2",
	"description": "Handy React hooks I use a lot ↪️",
	"scripts": {
		"build": "tsup",
		"test": "vitest --reporter verbose",
		"test:coverage": "vitest run --coverage",
		"doc": "typedoc --plugin typedoc-plugin-markdown --out ./docs/ --exclude \"**/lib/**/*\" --exclude \"**/test/**/*\" --entryPointStrategy expand ./src",
		"clean": "rm -rf node_modules && rm -rf dist"
	},
	"author": "Chance Strickland <hi@chance.dev>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chaance/hooks.git"
	},
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"dist",
		"src"
	],
	"devDependencies": {
		"@testing-library/jest-dom": "^6.1.2",
		"@testing-library/react": "^13.4.0",
		"@types/node": "^18.17.11",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"@vitejs/plugin-react": "^4.0.4",
		"@vitest/coverage-v8": "^0.34.3",
		"@vitest/ui": "^0.34.3",
		"eslint": "^8.48.0",
		"eslint-config-chance": "^2.0.2",
		"eslint-import-resolver-node": "^0.3.9",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"happy-dom": "^10.11.1",
		"prettier": "^3.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tsup": "^7.2.0",
		"typedoc": "0.25.0",
		"typedoc-plugin-markdown": "^3.16.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.3"
	},
	"dependencies": {
		"@chance/utils": "^0.0.13"
	},
